---
import PageLayout from "../layouts/PageLayout.astro";
import projectData from "../data/project.json";

const list = projectData.en;
const about = projectData.about.en;
---

<PageLayout title="Null Studio Gallery" active="/work">
  <div class="pt-[4.375rem] mobile:pt-[7rem]">
    <div class="about relative">
      <div class="text-[3.5rem] font-[SourceHanSansCN-ExtraLight] leading-[3.75rem] font-light mobile:text-[1.625rem] mobile:leading-[2rem]" set:html={about}>
      </div>
      <a href="/" class="mobile:hidden play-button"></a>
    </div>
    <div class="mt-[10.625rem] mobile:mt-[2.5rem] text-white leading-none">
      {
        list.map((item) => (
        <div class="mb-4 relative">
          <a href="/detail">
            <img width="100%" src={item.cover} alt={item.cover} />
          </a>
          <div class="absolute mobile:static group  bottom-10 left-10 ">
            <div class="text-[1rem] mobile:hidden mb-1">
              {item.title}
            </div>
            <div class="text-[1.5rem] mobile:text-black mobile:text-[1.25rem] mobile:mt-3">
              {item.description}
            </div>
            <div class="hidden group-hover:flex absolute inset-0 items-center cursor-pointer mobile:!hidden">
              <div class="w-[96px] h-[58px] transform animate-mode-forwards animate-highlight-normal bg-active-normal" ></div>
            </div>
          </div>
          <a  href="/detail" class="absolute bottom-10 right-10 right-button">

          </a>
        </div>
        ))
      }
    </div>
  </div>
</PageLayout>

<style>
.play-button {
  position: absolute;
  right: 0;
  bottom: 0;
  cursor: pointer;
  background: url(../assets/images/play-black.svg) no-repeat center/100% auto;
  width: 3.625rem;
  height: 3.5rem;
}
.right-button {
  cursor: pointer;
  background: url(../assets/images/right.svg) no-repeat center/100% auto;
  width: 2.375rem;
  height: 2.8125rem;
}
</style>

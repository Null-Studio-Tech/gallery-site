---
import PageLayout from "../layouts/PageLayout.astro";
import thumbnailLarge from "../assets/images/thumbnail_large.svg";
import instagramLogo from "../assets/images/instagram-logo.svg";
import groupImg from "../assets/images/group.svg";

---

<PageLayout title="Null Studio Gallery" class="flex min-h-0" active="/contact">
  <!-- <main>11111</main> -->
  <div class="flex justify-end items-center mobile:block mobile:pt-[2.5rem] w-full flex-1">
    <div class="flex-[2]"></div>
    <div class="flex flex-col mobile:mb-12 flex-1">
      <div class="text-[2rem] mb-5 mobile:mb-4">Contact</div>
      <div class="text-[1rem]">chen_gao_ding@163.com</div>
    </div>
    <div class="flex flex-col flex-1">
      <div class="text-[2rem] mb-5 mobile:mb-4">Social</div>
      <div class="flex">
        <img src={groupImg.src}/>
        <img class="mx-3" src={instagramLogo.src}/>
        <img src={thumbnailLarge.src}/>
      </div>
    </div>
  </div>
  <div slot="footer"></div>
</PageLayout>

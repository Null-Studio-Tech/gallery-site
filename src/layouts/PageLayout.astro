---
import BaseLayout from "./BaseLayout.astro";
import LaptopHeader from "../components/LaptopHeader.astro";
import MobileHeader from "../components/MobileHeader.astro";
import CommonFooter from "../components/CommonFooter.astro";

interface Props {
  title: string;
  active: string
}

const { title, active } = Astro.props;
---

<BaseLayout title={title}>
  <LaptopHeader theme="light" active={active} />
  <MobileHeader theme="dark" />
  <div class="pt-[6.25rem] w-full min-h-screen flex flex-col overflow-x-hidden overflow-y-auto px-16 mobile:px-4">
    <div class="flex-1">
      <slot />
    </div>
    <CommonFooter />
  </div>
</BaseLayout>

---
import BaseLayout from "./BaseLayout.astro";
import LaptopHeader from "../components/LaptopHeader.astro";
import MobileHeader from "../components/MobileHeader.astro";
import nextImage from "../assets/images/next.svg";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <LaptopHeader theme="dark" />
  <MobileHeader theme="light" />
  <div class="next-button fixed mobile:hidden right-16 w-[3.625rem] bottom-1/2 translate-y-1/2 z-30 cursor-pointer h-[3.5rem]"></div>
  <div class="next-button-mobile hidden mobile:block fixed w-[3.625rem] z-30 cursor-pointer h-[3.5rem] right-1/2 translate-x-1/2 bottom-16"></div>
  <slot />
</BaseLayout>
<style>
.next-button {
  background-image: url(../assets/images/next.svg);
  background-size: 100% auto;
}
.next-button-mobile {
  background-image: url(../assets/images/next-mobile.svg);
  background-size: 100% auto;
}
</style>

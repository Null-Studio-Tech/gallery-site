---
import { Picture } from "astro-imagetools/components";
import { isGifPath } from "@/utils/url";

interface Props {
  src: string;
  alt: string;
}

const { src, alt } = Astro.props;

const isGif = isGifPath(src);
---

{
  isGif ? (
    <img class="w-full object-cover" src={src} alt={alt} />
  ) : (
    <Picture src={src} alt={alt} />
  )
}

---
interface Props {
  src: string;
  controls?: boolean;
  autoplay?: string | undefined;
  type?: 'mp4' | 'm3u8'
}

const { src, controls, autoplay, type } = Astro.props;
---

<video
  id="base-video"
  class="z-0 h-full w-full object-cover object-center"
  data-src={src}
  data-type={type}
  muted
  autoplay={autoplay}
  controls={controls}
  custom-cache="false"
  loop
>
</video>

<script>
  import Hls from "hls.js";

  const video: HTMLVideoElement = document.getElementById(
    "base-video",
  ) as HTMLVideoElement;

  const source = video.dataset["src"] || "";
  const type = video.dataset["type"] || "mp4";

  if(type === 'mp4' || video.canPlayType("application/vnd.apple.mpegurl")) {
    video.src = source;
    video.addEventListener("loadedmetadata", function () {
      if(video.autoplay)video.play();
    });
  }

  if (Hls.isSupported() && type==='m3u8') {
    const hls = new Hls();
    hls.loadSource(source);
    hls.attachMedia(video);
    hls.on(Hls.Events.MANIFEST_PARSED, () => {
      video.play();
    });
    hls.on(Hls.Events.ERROR, (e,error) => {
      // 监听出错事件
      console.log("加载失败",e,error);
    });
  }

</script>
